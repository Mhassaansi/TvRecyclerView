<?xml version="1.0" encoding="utf-8" ?>
<resources>

    <attr name="scrollMode" >
        <enum name="alignScroll" value="0"/>
        <enum name="followScroll" value="1"/>
        <enum name="normalScroll" value="2" />
    </attr>

    <declare-styleable name="BaseGridView">
        <attr name="numberOfRows" format="integer" />
        <attr name="numberOfColumns" format="integer" />
        <attr name="rowHeight" format="reference|integer" />
        <attr name="columnWidth" format="reference|integer" />
        <attr name="android:gravity"/>
    </declare-styleable>

</resources>